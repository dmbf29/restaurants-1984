<%= simple_form_for restaurant do |f| %>
  <%= f.input :name, input_html: { class: '' } %>
  <%= f.input :address %>
  <%= f.input :opening_date, as: :string, input_html: { data: { controller: "datepicker" } } %>
  <%= f.input :rating, collection: [1, 2, 3, 4, 5] %>
  <%= f.input :category %>
  <%= f.submit "Submit", class: 'btn btn-primary mt-3' %>
<% end %>
